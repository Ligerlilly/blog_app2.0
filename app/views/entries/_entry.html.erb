
<br />
<br />
<div id="entry-<%= entry.id %>">
<h3><%= entry.title %></h3>
<br />
<% for photo in entry.photos %>
  <%= link_to image_tag(photo.image_url(:thumb).to_s), entry_photo_path(entry, photo.id) %>
  <div class="center"><%= photo.caption %></div>
  <br />
<% end %>
<%= simple_format(entry.content) %>
<br />
<ul id='comment_list-<%= entry.id %>'>
<% entry.comments.each do |comment| %>
  
  	<li id="comment_li-<%= comment.id %>"><%= comment.content %> 
  		<% if current_user.try(:id) == comment.user_id %> 
  		<%= link_to 'Delete', entry_comment_path(entry, comment),
  		 method: :delete, data: { confirm: "Are you sure?" }, remote: true  %>
  		 <% end %>
  		 </li>
  		
 
<%end%>
</ul>
<div id="comment-<%= entry.id %>"></div>



<div id="comment_button-<%= entry.id %>">
<% if current_user.nil? %>
  <%= link_to "Comment", new_user_session_path, class: "btn btn-primary" %>
<% else %>
  <%= link_to "Comment", new_entry_comment_path(entry.id), class: "btn btn-primary", remote: true %>
<%end%>
</div>
<%= link_to 'Edit', edit_entry_path(entry.id) if current_user.try(:admin?) %>
